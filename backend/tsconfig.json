{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7"],
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["./src"],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
